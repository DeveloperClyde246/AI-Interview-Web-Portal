<h2>Recruiter Dashboard</h2>
<p>Welcome, <%= username %>!</p>

<!-- Notifications -->
<h3>Notifications</h3>
<ul>
  <% if (notifications.length === 0) { %>
    <li>No new notifications</li>
  <% } else { %>
    <% notifications.forEach(notification => { %>
      <li><%= notification.message %> - <%= notification.status === "unread" ? "ðŸ””" : "âœ…" %></li>
    <% }) %>
  <% } %>
</ul>

<!-- Interviews -->
<h3>Your Scheduled Interviews</h3>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Candidate</th>
    <th>Scheduled Date</th>
    <th>Status</th>
    
  </tr>
  <% if (interviews.length === 0) { %>
    <tr><td colspan="4">No scheduled interviews</td></tr>
  <% } else { %>
    <% interviews.forEach(interview => { %>
      <tr>
        <!-- Display Interview Title -->
        <td><%= interview.title %></td>
        
        <!-- Display Candidates -->
        <td>
          <% if (interview.candidates.length > 0) { %>
            <% interview.candidates.forEach(candidate => { %>
              <%= candidate.name %> (<%= candidate.email %>)<br>
            <% }); %>
          <% } else { %>
            No candidates assigned
          <% } %>
        </td>
        
        <!-- Display Scheduled Date -->
        <td>
          <% if (interview.scheduled_date) { %>
            <%= new Date(interview.scheduled_date).toLocaleString() %>
          <% } else { %>
            Not Scheduled
          <% } %>
        </td>

        <!-- Display Interview Status -->
        <td><%= interview.status || "Pending" %></td>
      </tr>
    <% }) %>
  <% } %>
</table>


