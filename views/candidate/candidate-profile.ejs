<h2>Edit Profile</h2>

<form action="/candidate/profile/edit" method="POST">
  <label>Name:</label>
  <input type="text" name="name" value="<%= candidate.name %>" required><br>

  <label>Email:</label>
  <input type="email" name="email" value="<%= candidate.email %>" required><br>

  <button type="submit">Update Profile</button>
</form>

<h3>Change Password</h3>
<form action="/candidate/profile/edit-password" method="POST">
  <label>Current Password:</label>
  <input type="password" name="currentPassword" required><br>

  <label>New Password:</label>
  <input type="password" name="newPassword" required><br>

  <button type="submit">Change Password</button>
</form>

